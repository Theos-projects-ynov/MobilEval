<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/android_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Android Studio"
            app:layout_constraintEnd_toEndOf="@+id/android_logo"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="@+id/android_logo"
            app:layout_constraintTop_toBottomOf="@+id/android_logo" />

        <TextView
            android:id="@+id/ts_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="ThÃ©o.S"
            app:layout_constraintEnd_toEndOf="@+id/ts_head"
            app:layout_constraintStart_toStartOf="@+id/ts_head"
            app:layout_constraintTop_toBottomOf="@+id/ts_head" />

        <TextView
            android:id="@+id/nr_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Nathan.R"
            app:layout_constraintEnd_toEndOf="@+id/nr_head"
            app:layout_constraintStart_toStartOf="@+id/nr_head"
            app:layout_constraintTop_toBottomOf="@+id/nr_head" />

        <ImageView
            android:id="@+id/ts_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Devs"
            app:layout_constraintTop_toBottomOf="@+id/Devs"
            app:srcCompat="@drawable/ts_head" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:background="@color/purple_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="About"
            app:titleTextColor="@android:color/white" />

        <TextView
            android:id="@+id/java_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Java"
            app:layout_constraintEnd_toEndOf="@+id/java_logo"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="@+id/java_logo"
            app:layout_constraintTop_toBottomOf="@+id/java_logo" />

        <TextView
            android:id="@+id/technos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Technologies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <ImageView
            android:id="@+id/android_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Android Studio logo"
            app:layout_constraintEnd_toStartOf="@+id/technos"
            app:layout_constraintHorizontal_bias="0.698"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/technos"
            app:srcCompat="@drawable/android_studio_icon" />

        <ImageView
            android:id="@+id/java_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Java Logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.281"
            app:layout_constraintStart_toEndOf="@+id/technos"
            app:layout_constraintTop_toBottomOf="@+id/technos"
            app:srcCompat="@drawable/java_logo_icon_169577" />

        <TextView
            android:id="@+id/Devs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="208dp"
            android:text="Les Devs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/technos" />

        <ImageView
            android:id="@+id/nr_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/Devs"
            app:layout_constraintHorizontal_bias="0.574"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Devs"
            app:srcCompat="@drawable/nr_head" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
