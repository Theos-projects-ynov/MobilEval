<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État normal du bouton -->
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#6200EE" /> <!-- Couleur normale -->
            <corners android:radius="1000dp" /> <!-- Rayon élevé pour rendre le bouton rond -->
        </shape>
    </item>

    <!-- État lorsque le bouton est pressé -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#3700B3" /> <!-- Couleur plus foncée quand pressé -->
            <corners android:radius="100dp" />
        </shape>
    </item>
</selector>
